<h1> Merchant Invoice </h1>

<p>Invoice Id: <%= @invoice.id %></p>
<p>Invoice Status: <%= @invoice.status %></p>
<p>Invoice Created at: <%= @invoice.created_at.strftime("%A, %B %d, %Y") %></p>
<p>Invoice Status: <%= @invoice.status %></p><br>

<% @invoice.items.each do |item| %>
  <% @invoice.invoice_items.each do |invoiceitem| %>
  <H3> Item Name: <%= item.name %></h3>
  <p> Item Price: <%= item.unit_price %></p>
    <p>Quantity: <%= invoiceitem.quantity %></p>
    <p>Status: <%= invoiceitem.status %></p>
 <br><% end %>
<% end %>
